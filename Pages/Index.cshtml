@page
@model IndexModel
@{
    ViewData["Title"] = "Burza - Dashboard";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        .log-output {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            white-space: pre-wrap;
            background-color: #f8f9fa;
        }

        .stock-card {
            transition: transform 0.2s;
        }

            .stock-card:hover {
                transform: translateY(-5px);
            }

        .btn-fetch {
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

            .btn-fetch:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
            }

            .btn-fetch:active {
                transform: translateY(1px);
            }

            .btn-fetch .fa-sync-alt {
                transition: transform 0.5s;
            }

            .btn-fetch:active .fa-sync-alt {
                transform: rotate(360deg);
            }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="text-center"><i class="fas fa-chart-line"></i> Modul Burza</h1>
            </div>
        </div>

        <div class="row">
            <!-- Log sekce -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm stock-card h-100">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-terminal"></i> Aktivní log</span>
                        <button class="btn btn-sm btn-outline-light" onclick="clearLog()">
                            <i class="fas fa-trash-alt"></i> Vymazat
                        </button>
                    </div>
                    <div class="card-body p-0">
                        <textarea id="logOutput" class="form-control log-output h-100 border-0"
                                  rows="15" readonly>@Model.LogOutput</textarea>
                    </div>
                </div>
            </div>

            <!-- Oblíbené položky -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm stock-card h-100">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-star"></i> Oblíbené položky
                    </div>
                    <div class="card-body">
                        <form method="post" class="mb-3" id="addForm">
                            <div class="input-group">
                                <input type="text" name="NewItem" class="form-control"
                                       placeholder="Zadejte symbol (např. MSFT, AAPL)" required />
                                <button class="btn btn-success" type="submit" asp-page-handler="AddItem">
                                    <i class="fas fa-plus"></i> Přidat
                                </button>
                            </div>
                            <div class="form-text text-muted">
                                Používejte burzovní symboly (např. MSFT pro Microsoft)
                            </div>
                        </form>

                        @if (Model.FavoriteItems.Any())
                        {
                            <div class="list-group">
                                @foreach (var item in Model.FavoriteItems)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="font-weight-bold">@item</span>
                                        <form method="post" asp-page-handler="RemoveItem" asp-route-item="@item" class="m-0">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Odstranit
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Žádné oblíbené položky. Přidejte nějaké výše.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" asp-page-handler="FetchData">
        <button type="submit" class="btn btn-primary btn-lg w-100 btn-fetch">
            <i class="fas fa-sync-alt"></i> Ručně stáhnout aktuální data
        </button>
    </form>
    <div class="alert alert-info mb-4">
        <i class="fas fa-clock"></i> Poslední aktualizace:
        <span id="lastFetchTime">@Model.LastUpdateTime.ToString("dd.MM.yyyy HH:mm")</span>
        <span class="ms-2">(Automatické)</span>
    </div>

    @foreach (var item in Model.StockPrices)
    {
        <tr>
            <td>@item.Key</td>
            <td>@item.Value.ToString("C")</td>
        </tr>
    }

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-filter"></i> Filtrované akcie
                </div>
                <div class="card-body">
                    <form id="filterForm" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Dny poklesu:</label>
                            <input type="number" name="declineDays" class="form-control" value="3" min="1">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Max poklesů:</label>
                            <input type="number" name="maxDeclines" class="form-control" value="2" min="0">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Období (dny):</label>
                            <input type="number" name="lookbackDays" class="form-control" value="5" min="1">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Min zpráv:</label>
                            <input type="number" name="minNewsCount" class="form-control" value="3" min="0">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Filtrovat
                            </button>
                        </div>
                    </form>

                    <div id="filteredResults" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Automatický scroll logu dolů
        document.addEventListener('DOMContentLoaded', function () {
            const log = document.getElementById("logOutput");
            if (log) {
                log.scrollTop = log.scrollHeight;
            }
        });

        function clearLog() {
            if (confirm('Opravdu chcete vymazat celý log?')) {
                fetch('?handler=ClearLog', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                });
            }
        }


                document.getElementById('filterForm').addEventListener('submit', async function(e) {
                e.preventDefault();

                const formData = new FormData(this);
                const params = new URLSearchParams(formData).toString();

                const response = await fetch(`/filtered-stocks?${params}`);
                const data = await response.json();

                let html = '<div class="table-responsive"><table class="table table-striped">';
                html += '<thead><tr><th>Symbol</th><th>Rating</th><th>Doporučení</th><th>Počet zpráv</th></tr></thead><tbody>';

                data.forEach(item => {
                    const recommendation = item.sell === 1 ? 'Prodat' : 'Držet';
                    const ratingClass = item.rating > 5 ? 'text-success' : item.rating < -5 ? 'text-danger' : '';

                    html += `<tr>
                        <td>${item.name}</td>
                        <td class="${ratingClass}">${item.rating}</td>
                        <td>${recommendation}</td>
                        <td>${item.newsCount}</td>
                    </tr>`;

                    // Add news items if available
                    if (item.newsItems && item.newsItems.length > 0) {
                        html += `<tr><td colspan="4"><small>${item.newsItems.join('<br>')}</small></td></tr>`;
                    }
                });

                html += '</tbody></table></div>';
                document.getElementById('filteredResults').innerHTML = html;
            });
    </script>
</body>
</html>