{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "StockApi": {
    "BaseUrl": "https://api.example.com/stocks",
    "HistoryDays": 10, // Fetch 10 days of historical data by default
    "RetryCount": 5,
    "RetryDelaySeconds": 2
  },
  "NewsModule": {
    "RatingEndpoint": "http://partner:8000/rating",
    "ListStockEndpoint": "http://partner:8000/liststock",
    "SaleStockEndpoint": "http://partner:8000/salestock"
  },
  "UserSettings": {
    "RatingThreshold": 5, // User-defined threshold for sell recommendation
    "MinNewsCount": 3, // Minimum number of news articles to consider "enough"
    "DefaultBuyAmount": 1 // Default number of stocks to buy if no buy recommendation
  },
  "Favorites": [
    "Microsoft",
    "Google",
    "Amazon",
    "Tesla",
    "Apple"
  ]
}